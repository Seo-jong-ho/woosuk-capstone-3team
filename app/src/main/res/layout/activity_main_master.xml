<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivityMaster">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="237dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button1"
            android:layout_width="202dp"
            android:layout_height="202dp"
            android:background="@color/white"
            android:scaleType="fitCenter"

            android:src="@drawable/skeleton_detection2" />

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="202dp"
            android:layout_height="202dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/face_detection" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button3"
            android:layout_width="202dp"
            android:layout_height="202dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/text_detection" />

        <ImageButton
            android:id="@+id/button4"
            android:layout_width="202dp"
            android:layout_height="202dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/motion_detection" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button5"
            android:layout_width="202dp"
            android:layout_height="202dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/ar" />


    </LinearLayout>
</LinearLayout>